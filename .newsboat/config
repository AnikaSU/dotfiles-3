# CONFIGS

auto-reload yes
browser w3m %u
datetime-format "%d/%b/%Y"

macro i set browser "sxiv %u"; open-in-browser ; set browser "links %u"
macro y set browser "mpv --ytdl-format=worst %u & disown"; open-in-browser ; set browser "links %u"

bind-key l open
bind-key h quit
bind-key j down
bind-key k up
bind-key J next-feed
bind-key K prev-feed
bind-key g home
bind-key G end
bind-key ^d pagedown
bind-key ^u pageup

color listfocus red black standout bold
color listfocus_unread red black standout bold
color info red black bold