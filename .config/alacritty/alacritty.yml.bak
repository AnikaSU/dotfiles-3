window:
  dimensions:
    columns: 80
    lines: 0

  padding:
    x: 10
    y: 20

scrolling:
  history: 100000

# Font configuration
font:
  normal:
    family: FantasqueSansMono Nerd Font
    style: Regular
  bold:
    family: FantasqueSansMono Nerd Font
    style: bold
  italic:
    family: FantasqueSansMono Nerd Font
    style: italic
  bold_italic:
    family: FantasqueSansMono Nerd Font
    style: bold_italic

  size: 11

  offset:
    x: 0
    y: 2

  glyph_offset:
    x: 0
    y: 0

draw_bold_text_with_bright_colors: true

