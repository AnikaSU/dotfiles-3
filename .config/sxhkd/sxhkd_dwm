      ~/.local/bin/planeaciones

# Newsboat
super + n
#      st -e ~/.local/bin/newsboat-run
       st -e newsboat

#htop
super + F4
#      st -e ~/.local/bin/htop-run
      st -e htop

#Screenshots
Print
	flameshot gui
super + shift + Print	
      flameshot gui -d 2000
super + Print	
      flameshot full -c

##Audio
XF86AudioMute
#	~/.local/bin/mute-audio
	pamixer -t ; sigdwmblocks 4 
XF86AudioLowerVolume
	pamixer -d 2 ; sigdwmblocks 4
XF86AudioRaiseVolume
	pamixer -i 2 ; sigdwmblocks 4
XF86AudioPlay
	playerctl play-pause ; sigdwmblocks 6
XF86AudioNext
	playerctl next ; sigdwmblocks 6
XF86AudioPrev
	playerctl previous ; sigdwmblocks 6
XF86AudioStop
	playerctl stop ; sigdwmblocks 6
XF86AudioMicMute
	amixer set Capture toggle

