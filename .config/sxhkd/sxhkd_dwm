#Terminal
super + Return
      st 

# App menu
super + space
#     ~/.local/bin/dmenu_run_history -h 24 -i
      rofi -show drun -theme dracula

super + r
     ~/.local/bin/dmenu_run_history -h 24 -i -l 15

## Firefox
super + F2
      firefox
super + w
      ~/.local/bin/links-dmenu

#File Manager
