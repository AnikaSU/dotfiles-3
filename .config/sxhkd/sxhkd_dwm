      st -e ~/.local/bin/nwrap
#       st -e ~/.local/bin/lfwrap

super + shift + f
      thunar

#Spotify
super + F5
      spotify

#Emacsclient
super + e
      emacsclient -c
#	st -e nvim

# referencias
super + alt + r
      emacsclient -c /mnt/Data/Drive/GTD/referencias.org


