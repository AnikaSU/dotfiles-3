#XF86MonBrightnessDown
#	light -U 5 & notify-send -a "Brillo" "$(light -G)"


# bloquear teclado
XF86ScreenSaver
	betterlockscreen --lock blur

# Reiniciar sxhdk 
super + shift + r
      pkill -USR1 -x sxhkd

super + ctrl + r
      make -C ~/.repos/dwm-polybar > /tmp/dwm-compile.log


