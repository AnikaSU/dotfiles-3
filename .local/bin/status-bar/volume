#! /bin/sh

#mute=$(amixer get Master | awk -F'[][]' 'END{ print $6 }' )
#vol=$(amixer get Master | awk -F'[][]' 'END{ print $2 }' )
mute=$(pamixer --get-mute)
vol=$(pamixer --get-volume)
iconmute=󰖁
ramp1=󰕿
ramp2=󰖀
ramp3=󰕾

if [[ $mute == "true" ]]; then
    echo " $iconmute $vol% "
elif [[ "$vol" == "100" ]]; then
    echo " $ramp3 $vol% "
elif [[ "$vol" < "33" ]]; then
    echo " $ramp1 $vol% "
elif [[ "$vol" < "66" ]]; then
    echo " $ramp2 $vol% "
elif [[ "$vol" = "66" ]]; then
    echo " $ramp2 $vol% "
elif [[ "$vol" > "66" ]]; then
    echo " $ramp3 $vol% "
fi
