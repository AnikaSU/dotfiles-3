if [[ $mute == "true" ]]; then
    echo "$iconmute $vol%"
elif [[ "$vol" == "100" ]]; then
    echo "$ramp3 $vol%"
elif [[ "$vol" < "33" ]]; then
    echo "$ramp1 $vol%"
elif [[ "$vol" < "66" ]]; then
    echo "$ramp2 $vol%"
elif [[ "$vol" = "66" ]]; then
    echo "$ramp2 $vol%"
elif [[ "$vol" > "66" ]]; then
    echo "$ramp3 $vol%"
fi
