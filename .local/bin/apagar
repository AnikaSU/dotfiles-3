#!/bin/sh

var=$(echo "Apagar\nReiniciar\nSalir\nBloquear\nSuspender\nCancelar" | dmenu -i -p "¿Desea salir?") 
#var=$(echo " Apagar\n Reiniciar\n Salir\n Bloquear\n Suspender\n  Cancelar" | dmenu -i -p "¿Desea salir?") 

case $var in
    'Apagar') 
#       rm /tmp/bspwm-startup.lock
#	systemctl poweroff;;
	poweroff;;
	

    'Bloquear')
	i3lock -f -i /home/juan/.cache/i3lock/1633x768/blur.png;;

    'Reiniciar')
#	rm /tmp/bspwm-startup.lock
#	systemctl reboot;;
	reboot;;

    'Salir')
#	rm /tmp/bspwm-startup.lock
	bspc quit;;
    'Suspender')
#	systemctl suspend;;
	sudo zzz;;
    
	' Cancelar')
	    exit 0;;
esac
