#!/bin/sh

var=$(echo -e "Apagar\nSuspender\nReiniciar\nSalir\nCancelar" | dmenu -i -x 6 -y 4 -w 1588 -p "Â¿Desea salir?") 

case $var in
    'Apagar') 
#       rm /tmp/bspwm-startup.lock
#	systemctl poweroff;;
	poweroff;;
	
    'Suspender')
	systemctl suspend;;
#	sudo zzz;;

    'Reiniciar')
#	rm /tmp/bspwm-startup.lock
#	systemctl reboot;;
	reboot;;

    'Salir')
#	rm /tmp/bspwm-startup.lock
#	bspc quit;;
	pkill xinit;;
    
	'Cancelar')
	    exit 0;;
esac
